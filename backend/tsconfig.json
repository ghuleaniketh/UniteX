{
  "compilerOptions": {
    "rootDir": "./server/src",
    "outDir": "./dist",

    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2020",
    "lib": ["ES2020"],
    "types": ["node"],
    "esModuleInterop": true,

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "strict": true,
    "skipLibCheck": true,

    "verbatimModuleSyntax": false,
    "isolatedModules": false,
    "moduleDetection": "auto"
  },
  "include": ["server/src"],
  "exclude": ["dist", "node_modules"]
}
